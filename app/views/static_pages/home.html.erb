<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    </div>
<% else %>
  <div class="center hero-unit">
    <h1>Let Your Self Go</h1>
    <h2>Anonymously share with an open community.</h2>

    <%= link_to "Sign Up", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>