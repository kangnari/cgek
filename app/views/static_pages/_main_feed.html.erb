<div class="row">
  <div class="span9">
    <div class="row">
      <div class="span2"></div>
      <div class="span5">
        <section>
          <%= render 'shared/post_form' %>
        </section>  
      </div>
      <div class="span2"></div>
    </div>

    <div id="masonry-container">
      <ul>
        <%= render @posts %>
      </ul>
    </div>

    <div class="pagination-centered">
      <%= will_paginate @posts %>
    </div>

  </div>
  <aside class="span3">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    Private chat coming soon.
  </aside>
</div>

<script>
  $(function() {
    var $container = $('#masonry-container');
      $container.imagesLoaded(function(){
        $container.masonry({
          itemSelector: '.feed-post',
          gutter: 20,
          columnWidth: '.feed-post'
      });
    });
  });
</script>