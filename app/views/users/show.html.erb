<% provide(:title, @user.firstname + ' ' + @user.lastname) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= image_tag(@user.image.url(:profile), alt: @user.firstname + ' ' + @user.lastname, class: "avatar") %>
				<%= @user.firstname + ' ' + @user.lastname %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.microposts.any? %>
			<h3>Responses (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>